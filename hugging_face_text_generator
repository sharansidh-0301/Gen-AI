from transformers import pipeline

# Load text-generation pipeline with GPT-2
generator = pipeline(
    "text-generation",
    model="gpt2"
)

# User input
prompt = input("Enter your prompt: ")

# Generate text
output = generator(
    prompt,
    max_length=100,
    num_return_sequences=1
)

print("\nGenerated Text:\n")
print(output[0]["generated_text"])
